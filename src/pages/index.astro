                <span class={`inline-flex items-center rounded-full px-3 py-1 text-xs font-medium ${gameTagStyles[sport.moodKey as keyof typeof gameTagStyles]}`}>
                  {sport.mood}
                </span>
                <div class="space-y-2">
                  <h4 class="text-lg font-semibold">{sport.title}</h4>
                  <p class="text-sm text-muted">{sport.highlight}</p>
                </div>
              </div>
              <div class="relative h-24 w-24 shrink-0 self-center ml-auto overflow-hidden rounded-xl border border-[var(--border)] bg-black/5">
                <img src={sport.image} alt={`${sport.title} sport`} loading="lazy" class="h-full w-full object-cover" />
              </div>
            </div>
          </article>
        ))}
