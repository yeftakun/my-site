---
import BaseLayout from "../layouts/Base.astro";
import LapTable from "../components/LapTable.jsx";

const pageMeta = {
  title: "Assetto Corsa | Lap Time Board",
  description: "Lap time terbaru (based on personalbest.ini).",
  image: "https://images.steamusercontent.com/ugc/13610531379042090029/A9B166DA0C23500BC334C2DAE5C1C91A65FC221E/?imw=5000&imh=5000&ima=fit&impolicy=Letterbox&imcolor=%23000000&letterbox=false",
  imageAlt: "Assetto Corsa Lap Time Board preview",
  ogType: "website",
};
---
<BaseLayout {...pageMeta}>
  <div class="space-y-6">
    <section class="space-y-1">
      <h1 class="text-3xl font-semibold">Lap Time Board</h1>
      <p class="text-sm text-muted space-y-0.5">
        Lap Time saya | Diperbaharui: 2025-12-29.
        <span class="block text-xs text-muted">Based on <code>personalbest.ini</code>.</span>
      </p>
    </section>
    <section class="space-y-1">
      <LapTable client:load />
    </section>
  </div>
</BaseLayout>
